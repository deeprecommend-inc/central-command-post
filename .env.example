# Database
DATABASE_URL=postgresql+asyncpg://sns_user:sns_password@localhost:5432/sns_orchestrator

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-this-to-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth - YouTube
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# OAuth - X (Twitter)
X_CLIENT_ID=your-x-client-id
X_CLIENT_SECRET=your-x-client-secret

# OAuth - Instagram
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# OAuth - TikTok
TIKTOK_CLIENT_ID=your-tiktok-client-id
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# OAuth Redirect Base
OAUTH_REDIRECT_BASE=http://localhost:8006

# AI Services
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key

# Proxy Services
BRIGHTDATA_API_KEY=your-brightdata-api-key
MULOGIN_API_KEY=your-mulogin-api-key

# Rate Limiting
DEFAULT_RATE_LIMIT_HOURLY=100
DEFAULT_RATE_LIMIT_DAILY=1000

# Timezone
DEFAULT_TIMEZONE=Asia/Tokyo

# Monitoring
ENABLE_MONITORING=true
ALERT_WEBHOOK_URL=

# WORM Audit
AUDIT_STORAGE_PATH=./audit_logs

# Application
DEBUG=false
ENVIRONMENT=production
